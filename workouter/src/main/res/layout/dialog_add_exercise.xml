<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/add_exercise_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_name" />

            <AutoCompleteTextView
                android:id="@+id/add_exercise_ac_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/add_exercise_tv_reps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/text_repetitions" />

            <LinearLayout android:layout_width="match_parent">

                <Button
                    android:id="@+id/add_exercise_btn_reps_minus"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:text="-" />

                <TextView
                    android:id="@+id/add_exercise_tv_reps_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints="@string/hint_difficulty_high"
                    android:hint="@string/hint_difficulty_high"
                    android:text=""
                    android:layout_weight="1"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/add_exercise_btn_reps_plus"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="+" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/add_exercise_tv_rounds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/text_rounds" />

            <LinearLayout android:layout_width="match_parent">

                <Button
                    android:id="@+id/add_exercise_btn_rounds_minus"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:text="-" />

                <TextView
                    android:id="@+id/add_exercise_tv_rounds_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints="@string/hint_difficulty_high"
                    android:hint="@string/hint_difficulty_high"
                    android:text=""
                    android:layout_weight="1"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/add_exercise_btn_rounds_plus"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="+" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/add_exercise_tv_end_reps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/text_end_repetitions" />

            <LinearLayout android:layout_width="match_parent">

                <Button
                    android:id="@+id/add_exercise_btn_end_reps_minus"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:text="-" />

                <TextView
                    android:id="@+id/add_exercise_tv_end_reps_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints="@string/hint_difficulty_high"
                    android:hint="@string/hint_difficulty_high"
                    android:text=""
                    android:layout_weight="1"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/add_exercise_btn_end_reps_plus"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="+" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/add_exercise_tv_end_rounds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/text_end_rounds" />

            <LinearLayout android:layout_width="match_parent">

                <Button
                    android:id="@+id/add_exercise_btn_end_rounds_minus"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:text="-" />

                <TextView
                    android:id="@+id/add_exercise_tv_end_rounds_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints="@string/hint_difficulty_high"
                    android:hint="@string/hint_difficulty_high"
                    android:text=""
                    android:layout_weight="1"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/add_exercise_btn_end_rounds_plus"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="+" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/add_exercise_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_time" />

            <EditText
                android:id="@+id/add_exercise_et_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints="@string/hint_difficulty_high"
                android:ems="10"
                android:hint="@string/hint_difficulty_high"
                android:inputType="numberSigned"
                android:text="" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/add_exercise_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_add" />

        <Button
            android:id="@+id/remove_exercise_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_remove" />

    </LinearLayout>

</LinearLayout>